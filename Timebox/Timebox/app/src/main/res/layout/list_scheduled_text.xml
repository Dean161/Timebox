<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/text_list_schedule_category_color"
        android:layout_width="35dp"
        android:layout_height="50dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal">

            <TextView
            android:id="@+id/text_list_schedule_activity_name"
            android:layout_width="230dp"
            android:layout_height="25dp"/>

            <TextView
                android:id="@+id/text_list_schedule_duration"
                android:layout_width="70dp"
                android:layout_height="25dp"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal">

            <TextView
                android:id="@+id/text_list_startDateAndTime"
                android:layout_width="170dp"
                android:layout_height="25dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/text_list_endDateAndTime"
                android:layout_height="25dp"
                android:layout_width="150dp"
                android:text="TextView"
                android:gravity="right"/>
        </LinearLayout>

    </LinearLayout>



</LinearLayout>
