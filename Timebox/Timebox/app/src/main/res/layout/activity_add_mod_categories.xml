<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddModCategories">

    <Switch
        android:id="@+id/switch2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modify"
        tools:layout_editor_absoluteX="284dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="115dp"
        android:layout_height="40dp"
        android:text="New Category Name"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="59dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="98dp"
        android:layout_height="37dp"
        android:text="New Category Color HEX Code"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="126dp" />

    <Spinner
        android:id="@+id/spinner2"
        android:dependency="@+id/switch2"
        android:layout_width="350dp"
        android:layout_height="32dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="243dp" />

    <TextView
        android:id="@+id/textView8"
        android:dependency="@+id/switch2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Category to be modified"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="223dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="353dp"
        android:layout_height="54dp"
        android:text="Save"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="294dp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="189dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="e.g. Sport"
        tools:layout_editor_absoluteX="179dp"
        tools:layout_editor_absoluteY="59dp" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="187dp"
        android:layout_height="38dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="e.g. #0000f"
        tools:layout_editor_absoluteX="181dp"
        tools:layout_editor_absoluteY="126dp" />
</android.support.constraint.ConstraintLayout>
