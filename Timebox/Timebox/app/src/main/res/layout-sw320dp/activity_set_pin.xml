<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="220dp"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title_set_pin"
        android:text="@string/hint_pin"
        android:layout_marginStart="25dp"
        android:gravity="bottom"
        android:textSize="@dimen/text_size"
        android:textStyle="bold"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_set_pin"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="8dp"
        android:inputType="numberPassword"
        android:hint="@string/hint_set_pin"
        android:maxLength="4"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size"
        android:id="@+id/title_confirm_pin"
        android:text="@string/title_confirm_pin"
        android:layout_marginStart="25dp"
        android:gravity="bottom"
        android:textStyle="bold"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_confirm_pin"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="8dp"
        android:inputType="numberPassword"
        android:hint="@string/hint_confirm_pin"
        android:maxLength="4"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:id="@+id/button_set_pin_cancel"
            android:text="@string/dialog_cancel" />

        <Button
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:id="@+id/button_set_pin_ok"
            android:text="@string/dialog_ok"/>


    </LinearLayout>



</LinearLayout>