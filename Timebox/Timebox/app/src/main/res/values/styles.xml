<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme_New" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorRed</item>
        <item name="colorPrimaryDark">@color/colorRedDark</item>
        <item name="colorAccent">@color/colorBlack</item>
    </style>

    <style name="AppTheme_New.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme_New.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme_New.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="WhiteRed">
        <item name="colorPrimary">@color/colorRed</item>
        <item name="colorPrimaryDark">@color/colorRedDark</item>
        <item name="colorAccent">@color/colorWhite</item>
    </style>

    <style name="AppTheme_New.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme_New.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ColorPickerDialogTheme" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:background">@color/colorGrey</item>
        <item name="android:textColor">@android:color/holo_blue_bright</item>
    </style>

</resources>
